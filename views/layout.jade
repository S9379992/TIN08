doctype html
html
  head
    title #{title}: Express Website
    meta(charset='utf-8')     
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css', 
    rel='stylesheet')
    link(rel= 'stylesheet', href='/stylesheets/style.css')
  body
    
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='#') Menu
      |   
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
        span.sr-only Toggle Navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      
      |   
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.nav.nav-item
          li(class=(title ==='Home'?'active':'', "navbar-brand"))
              a(href='/') Home
          li(class=(title ==='HelloWorld'?'active':'', "navbar-brand"))
              a(href='/hello') Hello World
          li(class=(title ==='Form'?'active':'', "navbar-brand"))
              a(href='/form') Form
          li(class=(title ==='Fruits(jsonData)'?'active':'', "navbar-brand"))
              a(href='/jsondata') Fruits(jsonData)
       
    block content
    footer 
